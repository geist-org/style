.zi-btn
  -webkit-box-align center
  -webkit-align-items center
  display inline-block
  padding: 0 1.375rem
  border-radius var(--geist-radius)
  border: 1px solid var(--accents-2)
  font-weight 400
  font-size .875rem
  cursor pointer
  user-select none
  outline none
  justify-content center
  text-transform uppercase
  text-align center
  height 2.5rem
  line-height 2.5rem
  width auto
  min-width 12.5rem
  white-space nowrap
  transition border 0.2s, background 0.2s, color 0.2s ease-out
  position relative
  overflow hidden
  background-color var(--geist-background)
  color var(--accents-5)

  &:not(.loading):not(.shadow):hover
    color black
    background white
    border-color black

.zi-btn
  &.mini
    height 1.5rem
    line-height 1.5rem
    padding: 0 1.375rem
    width initial
    min-width 5.25rem
    font-size .75rem

  &.small
    height 2rem
    line-height 2rem
    padding: 0 1.25rem
    width initial
    min-width 9.375rem
    font-size .875rem

  &.big, &.huge, &.large
    height 2.75rem
    line-height 2.75rem
    padding: 0 1.875rem
    width initial
    min-width 15.625rem
    font-size 1rem

  &.primary
    background-color var(--geist-foreground)
    border: 1px solid var(--geist-foreground)
    color var(--geist-background)

    &:not(.loading):not(.shadow):hover
      color var(--geist-foreground)
      background var(--geist-background)
      border 1px solid var(--geist-foreground)

  &.warning
    border-color var(--geist-warning)
    background-color var(--geist-warning)
    color white

    &:not(.loading):not(.shadow):hover
      color var(--geist-warning)
      background white
      border-color var(--geist-warning)

  &.danger, &.error
    border-color var(--geist-error)
    background-color var(--geist-error)
    color white

    &:not(.loading):not(.shadow):hover
      color var(--geist-error)
      background white
      border-color var(--geist-error)

  &.success
    border-color var(--geist-success)
    background-color var(--geist-success)
    color white

    &:not(.loading):not(.shadow):hover
      color var(--geist-success)
      background: white
      border-color var(--geist-success)

  &.abort
    background-color transparent
    border-color transparent
    color var(--accents-5)

    &:not(.loading):not(.shadow):hover
      background-color transparent
      border-color transparent
      color var(--accents-5)

  &.shadow
    box-shadow 0 3px 10px rgba(0, 0, 0, 0.12)

    &:not(.loading):hover
      box-shadow 0 7px 20px rgba(0, 0, 0, 0.16)
      transform translateY(-1px)

  &.disabled
    background var(--accents-1) !important
    border-color var(--accents-2) !important
    color #ccc !important
    cursor not-allowed !important

    &:hover
      background var(--accents-1) !important
      border-color var(--accents-2) !important
      color #ccc !important
      cursor not-allowed !important

  &.loading
    cursor default

    &:hover
      pointer-events none
      color transparent

.zi-loading-shim
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
  background-color var(--accents-1)

  i
    width 4px
    height 4px
    border-radius 50%
    background-color #444
    margin 0 1px
    display inline-block
    animation zi-loading-blink 1.4s infinite both

    &:nth-child(2)
      animation-delay 0.2s

    &:nth-child(3)
      animation-delay 0.4s


@keyframes zi-loading-blink
  0%
    opacity 0.2
  20%
    opacity 1
  100%
    opacity 0.2


.zi-btn .prefix, .zi-btn .suffix
  position absolute
  top 50%
  transform translateY(-50%)
  font-size rem(25)
  pointer-events none


.zi-btn
  & .prefix
    left rem(8)

  & .suffix
    right rem(8)

  &.small .prefix, &.small .suffix
    font-size rem(14)

.zi-btn.auto
  min-width min-content
  padding 0 rem(20)

  .mini
    padding 0 rem(10)

  .small
    padding 0 rem(15)

  .big, .huge
    padding 0 rem(25)
